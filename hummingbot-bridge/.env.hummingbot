# ============================================================================
# HUMMINGBOT 2.9.0 + GATEWAY 2.9.0 ENVIRONMENT CONFIGURATION
# ============================================================================

# ============================================================================
# CRITICAL SECURITY SETTINGS - REQUIRED
# ============================================================================

# Wallet Addresses (REQUIRED - Replace with your actual addresses)
export HBOT_ARBITRUM_WALLET=your_wallet_address
export HBOT_SOLANA_WALLET=your_wallet_address

# ============================================================================
# WEBHOOK SERVER CONFIGURATION
# ============================================================================

# Webhook Server Security
# Generate a secure random string (e.g., using openssl rand -hex 32 or Python's secrets module)
export HBOT_WEBHOOK_API_KEY=your_webhookapi_key
export HBOT_WEBHOOK_PORT=3002

# Webhook Server MQTT Configuration
export HBOT_WEBHOOK_MQTT_HOST=localhost
export HBOT_WEBHOOK_MQTT_PORT=1883
export HBOT_WEBHOOK_MQTT_NAMESPACE=hbot

# Webhook Server Debug Settings
export HBOT_WEBHOOK_DEBUG=false
export HBOT_WEBHOOK_LOG_LEVEL=INFO

# ============================================================================
# STRATEGY CONFIGURATION
# ============================================================================

# MQTT Settings (optional - uses Hummingbot config if not set)
export HBOT_MQTT_HOST=localhost
export HBOT_MQTT_PORT=1883
export HBOT_MQTT_NAMESPACE=hbot

# Gateway Settings (optional - matches your gateway config)
export HBOT_GATEWAY_HOST=localhost
export HBOT_GATEWAY_PORT=15888
export HBOT_GATEWAY_HTTPS=true
# Gateway Cache Settings
export HBOT_GATEWAY_CONFIG_CACHE_TTL=300
# 5 minutes in seconds
# ============================================================================
# TRADING LIMITS - SAFETY CONTROLS
# ============================================================================
# Fixed Trade Amount (Environment-Controlled)
export HBOT_TRADE_AMOUNT=10.0

# $0.01 USDC per trade signal

# Maximum trade amount per signal
export HBOT_MAX_TRADE_AMOUNT=200

# Trading Limits and Safety Controls
export HBOT_MIN_TRADE_AMOUNT=0.0001
# Minimum single trade amount

# Slippage tolerance (percentage)
export HBOT_SLIPPAGE_TOLERANCE=1.0

# Minimum balances required for trading (safety buffer)
export HBOT_MIN_BALANCE_ETH=0.0005
export HBOT_MIN_BALANCE_SOL=0.01

# Minimum SOL to leave when trading on solana
export HBOT_MIN_SOL_BALANCE=0.02

# Daily trading limits (safety controls)
export HBOT_MAX_DAILY_TRADES=500
export HBOT_MAX_DAILY_VOLUME=10000.0
export HBOT_SELL_PERCENTAGE=99.999
# Sell 99.9% (leave 0.1% dust)
export HBOT_MIN_SELL_AMOUNT=0.000001
# Don't sell less than 0.001 tokens

# ============================================================================
# CACHE AND PERFORMANCE CONFIGURATION
# ============================================================================

# Balance Cache Settings
export HBOT_BALANCE_CACHE_TTL=10
# Balance cache TTL in seconds

# Network Request Settings
export HBOT_REQUEST_TIMEOUT=10
export HBOT_LOG_LEVEL=INFO

export PYTHONUNBUFFERED=1
export HBOT_GATEWAY_CERT_PATH="certs/client_cert.pem"
export HBOT_GATEWAY_KEY_PATH="certs/client_key.pem"
export HBOT_GATEWAY_CONF_PATH="/hummingbot/gateway/conf"
export GATEWAY_PASSPHRASE=hummbot1

# CEX Trading Configuration
export HBOT_CEX_ENABLED=true
export HBOT_CEX_DEFAULT_EXCHANGE=coinbase_advanced_trade
export HBOT_CEX_ORDER_TYPE=market
export HBOT_CEX_MAX_ORDER_SIZE=100.0
export HBOT_CEX_DAILY_LIMIT=1000.0
export HBOT_CEX_TRADING_PAIRS=ETH-USD,BTC-USD,SOL-USD,ADA-USD,MATIC-USD,LINK-USD,UNI-USD,AVAX-USD,DOT-USD,ATOM-USD,PEPE-USD,XRP-USD,CRO-USD
export HBOT_CEX_MIN_ORDER_SIZE=1.2
export HBOT_CEX_PREDICTIVE_SELL=true
export HBOT_CEX_PREDICTIVE_WINDOW=60
export HBOT_CEX_FEE_ESTIMATE=1.5

